#hatrack
  #header
    #font_controls
      %a.fontSize.down -A
      %a.fontSize.reset A
      %a.fontSize.up A+

    #current_sprint
      %span#current_name= "#{@current_sprint.name} (#{print_date(@current_sprint.start_date)} - #{print_date(@current_sprint.end_date, 'Current')})"
      %span#edit_sprint= "edit"

      - semantic_form_for @current_sprint do |form|
        - form.inputs do
          = form.input :name
          = form.input :start_date,:input_html => { :class => 'date_input' }
          = form.input :end_date,:input_html => { :class => 'date_input' }
        - form.buttons do
          = form.commit_button
          %input{:type => 'button', :value => 'Cancel'}

    %ul#sprints
      - @sprints.each do |sprint|
        %li
          %a{:href => "/sprints/show/#{sprint.id}"}= "#{sprint.name} (#{print_date(sprint.start_date) } - #{print_date(sprint.end_date,"Current") })"

    #logo HatRack


  #controls
    %a.toggle.yellow Yellow
    %a.toggle.black black
    %a{:href => "/sprints/new"} New Sprint


  %table#racks
    %tr
      %td#yellow.rack{:style => "width:50%;"}
        .column_header
          %a.add_hat.yellow
            %img{:src =>"/images/add.png"}
        %ul.list
          - @current_sprint.yellow_hats.each do |hat|
            = render :partial => '/hats/yellow', :locals => {:hat => hat}

      %td#black.rack{:style => "width:50%;"}
        .column_header
          %a.add_hat.black
            %img{:src =>"/images/add.png"}

        %ul.list
          - @current_sprint.black_hats.each do |hat|
            = render :partial => '/hats/black', :locals => {:hat => hat} 
        

  #new_hat
    %input.yellow{:type => 'button', :value => "Add Yellow Hat"}
    %input.black{:type => 'button', :value => "Add Black Hat"}



